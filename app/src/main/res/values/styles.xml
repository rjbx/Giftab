<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorCheer</item>
        <item name="popupMenuStyle">@style/AppTheme.PopupOverlay</item>
        <item name="android:datePickerDialogTheme">@style/AppTheme.DataPicker</item>
    </style>

    <style name="AppTheme.DataPicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.StatusBarOverlay" parent="@android:style/Widget.PopupMenu">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="@android:style/Widget.PopupMenu">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.TextEmphasis">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AuthOverlay" parent="AppTheme">
        <item name="colorAccent">@color/colorConversion</item>
    </style>

    <style name="FirebaseUI.AuthMethodPicker.Logo">
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="FirebaseUI.TopProgressBar" parent="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/colorConversionLight</item>
        <item name="android:visibility">invisible</item>
        <item name="mpb_progressStyle">horizontal</item>
        <item name="mpb_useIntrinsicPadding">false</item>
    </style>

    <style name="FirebaseUI.Text.T08" tools:ignore="UnusedResources">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="FirebaseUI.Button.AccountChooser.AnonymousButton">
        <item name="drawableStartCompat">@drawable/fui_ic_anonymous_white_24dp</item>
        <item name="android:background">@color/colorCheerDark</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>