<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spawn_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="#fff">

    <FrameLayout
        android:id="@+id/index_remove_view"
        android:layout_width="10dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorAttention"
        android:gravity="center"
        android:text="@string/symbol_decrement_button"
        android:textColor="#fff"
        android:textSize="@dimen/text_size_paragraph_title"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/spawn_item_primary"
        android:layout_width="387dp"
        android:layout_height="56dp"
        android:layout_margin="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/text_size_paragraph_title"
        app:layout_constraintEnd_toStartOf="@+id/index_add_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/index_remove_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spawn_item_secondary"
        android:layout_width="279dp"
        android:layout_height="39dp"
        android:layout_margin="4dp"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintStart_toEndOf="@+id/index_remove_view"
        app:layout_constraintTop_toBottomOf="@+id/spawn_item_primary" />

    <TextView
        android:id="@+id/spawn_item_tertiary"
        android:layout_width="279dp"
        android:layout_height="39dp"
        android:layout_margin="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/index_remove_view"
        app:layout_constraintTop_toBottomOf="@+id/spawn_item_secondary"
        app:layout_constraintVertical_bias="0.0" />

    <FrameLayout
        android:id="@+id/index_add_view"
        android:layout_width="10dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorConversionDark"
        android:gravity="center"
        android:text="+"
        android:textColor="#fff"
        android:textSize="@dimen/text_size_paragraph_title"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/relativeLayout"
        android:layout_width="94dp"
        android:layout_height="83dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:background="#000"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/index_add_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/spawn_item_secondary">

        <ImageView
            android:id="@+id/spawn_item_logo"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/description_charity_logo" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>