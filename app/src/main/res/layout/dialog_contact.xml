<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collection_add_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="4dp"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/colorNeutralDark">

    <Button
        android:id="@+id/email_button"
        android:drawableStart="@android:drawable/ic_dialog_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/colorSlate"
        android:textSize="@dimen/text_size_paragraph_title"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/phone_button"
        android:drawableStart="@android:drawable/stat_sys_phone_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/colorSlate"
        android:textSize="@dimen/text_size_paragraph_title"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/website_button"
        android:drawableStart="@drawable/web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/colorSlate"
        android:textSize="@dimen/text_size_paragraph_title"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/address_button"
        android:drawableStart="@android:drawable/ic_menu_mapmode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/colorSlate"
        android:textSize="@dimen/text_size_paragraph_title"
        android:textAllCaps="false"/>

</LinearLayout>