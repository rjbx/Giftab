<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/remit_item_view"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="10dp"
            android:background="@color/colorChalk"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:id="@+id/remit_contact_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="top"
                android:background="@color/colorChalk"
                android:src="@drawable/ic_baseline_more_horiz_24px"
                android:contentDescription="@string/description_decrement_percentage_text"/>

            <ImageButton
                android:id="@+id/remit_share_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:background="@color/colorChalk"
                android:src="@drawable/ic_menu_share"
                android:contentDescription="@string/description_decrement_percentage_text"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/remit_stats_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:padding="2dp"
            android:orientation="vertical"
            android:gravity="end"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/remit_memo_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:background="#fff"
                    android:textSize="@dimen/text_size_paragraph_title"
                    android:textColor="#000"
                    android:gravity="center"
                    android:text="📝"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:hint="Toggle the type of this remit"/>

                <TextView
                    android:id="@+id/remit_time_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".75"
                    android:background="#fff"
                    android:textSize="@dimen/text_size_paragraph_title"
                    android:textColor="#000"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:hint="Change the date of this remit"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/remit_type_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:background="#fff"
                    android:textSize="@dimen/text_size_paragraph_title"
                    android:textColor="#000"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:hint="Toggle the type of this remit"/>

                <EditText
                    android:id="@+id/remit_amount_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".75"
                    android:background="#fff"
                    android:textSize="@dimen/text_size_paragraph_title"
                    android:textColor="#000"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:hint="Change the amount of this remit"/>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/remit_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:padding="2dp"
            android:background="@color/colorHeat">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_gravity="start|center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".7">

                    <TextView
                        android:id="@+id/remit_primary"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".9"
                        android:layout_margin="4dp"
                        android:textSize="@dimen/text_size_paragraph_title"
                        android:textAppearance="?attr/textAppearanceListItem" />

                    <CheckBox
                        android:id="@+id/remit_type"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="2dp"
                        android:checked="false" />

                </LinearLayout>

                <TextView
                    android:id="@+id/remit_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight=".3"
                    android:layout_marginStart="4dp"
                    android:textSize="@dimen/text_size_paragraph"
                    android:textAppearance="?attr/textAppearanceListItem" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>