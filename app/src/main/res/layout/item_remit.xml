<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/remit_item_view"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <FrameLayout
            android:id="@+id/remit_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:padding="2dp"
            android:background="@color/colorHeat">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_gravity="start|center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".7">

                    <TextView
                        android:id="@+id/remit_primary"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".9"
                        android:layout_margin="4dp"
                        android:textSize="@dimen/text_size_paragraph_title"
                        android:textAppearance="?attr/textAppearanceListItem" />

                </LinearLayout>

                <TextView
                    android:id="@+id/remit_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight=".3"
                    android:layout_marginStart="4dp"
                    android:textSize="@dimen/text_size_paragraph"
                    android:textAppearance="?attr/textAppearanceListItem" />

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/remit_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:clickable="true"
            android:focusable="true"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="2dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>