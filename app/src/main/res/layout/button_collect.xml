<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collection_add_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="4dp"
    android:padding="0dp"
    android:background="@color/colorNeutralDark">

    <Button
        android:id="@+id/collection_add_button"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:backgroundTint="@color/colorChalk"
        android:textColor="#555"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_paragraph_title"
        android:padding="0dp"
        android:text="@string/symbol_increment_button"/>

</FrameLayout>