<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:entries="@array/list_preference_sortJournal"
        android:entryValues="@array/list_preference_sortJournal_values"
        android:key="@string/pref_journalSort_key"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Sort"/>

    <ListPreference
        android:entries="@array/list_preference_orderJournal"
        android:entryValues="@array/list_preference_orderJournal_values"
        android:key="@string/pref_journalOrder_key"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_indexAcclaimed_label"/>

    <Preference
        android:key="@string/pref_clear_key"
        android:title="@string/pref_clear_label"
        android:summary="Clear all records and related data.\nClearing does not impact your saved collection."/>

    <Preference
        android:key="@string/pref_show_key"
        android:title="@string/pref_show_label"
        android:summary="Navigate to the main preference screen"/>

</PreferenceScreen>
